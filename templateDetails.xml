<?xml version="1.0" encoding="utf-8"?>
<extension type="template" version="3.8" client="site" method="upgrade">
    <name>rwtmpl</name>
    <version>1.0.7</version>
    <creationDate>09.07.2019</creationDate>
    <author>xakepok@xakepok.com</author>
    <authorEmail>your@email.com</authorEmail>
    <copyright>A copyright</copyright>
    <description>TPL_RWTMPL_XML_DESCRIPTION</description>

    <files>
        <filename>component.php</filename>
        <filename>error.php</filename>
        <filename>offline.php</filename>
        <filename>index.php</filename>
        <filename>helper.php</filename>
        <filename>templateDetails.xml</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <folder>css</folder>
        <folder>html</folder>
        <folder>images</folder>
        <folder>js</folder>
        <folder>language</folder>
    </files>

    <positions>
        <position>raspsearch</position>
        <position>breadcrumbs</position>
        <position>debug</position>
        <position>menu</position>
        <position>left</position>
        <position>component</position>
        <position>right</position>
        <position>footer</position>
        <position>rwtmplter</position>
        <position>adv_mobile</position>
        <position>adv_desktop</position>
    </positions>

    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field name="sitedescription"
                       type="text"
                       default=""
                       label="JGLOBAL_DESCRIPTION"
                       description="JGLOBAL_SUBHEADING_DESC"
                       filter="string"/>
            </fieldset>
            <fieldset name="metrika" label="COM_RWTMPL_CONFIG_YAMETRIKA" description="COM_RWTMPL_CONFIG_YAMETRIKA_DESC">
                <field name="yametrika_id"
                       type="text"
                       filter="int"
                       label="COM_RWTMPL_CONFIG_YAMETRIKA_ID"
                       description="COM_RWTMPL_CONFIG_YAMETRIKA_ID_DESC"
                       />
                <field name="webmaster_code"
                       type="text"
                       filter="string"
                       label="COM_RWTMPL_CONFIG_WEBMASTER_CODE"
                       description="COM_RWTMPL_CONFIG_WEBMASTER_CODE_DESC"
                       />
            </fieldset>
        </fields>
    </config>
</extension>
